MODULE user_command_0100 INPUT.
  ok_code = sy-ucomm.
  CASE ok_code.
    WHEN '&F15' OR '&F12'.
      LEAVE PROGRAM.
    WHEN '&F03'.
      CALL SELECTION-SCREEN '1000'.
  ENDCASE.
ENDMODULE.